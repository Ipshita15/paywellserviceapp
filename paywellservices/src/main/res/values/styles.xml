    <declare-styleable name="SequenceLayout">
        <attr name="progressForegroundColor" format="color" />
        <attr name="progressBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="SequenceStep">
        <attr name="anchor" format="string" />
        <attr name="anchorTextAppearance" format="reference" />
        <attr name="title" format="string" />
        <attr name="titleTextAppearance" format="reference" />
        <attr name="subtitle" format="string" />
        <attr name="subtitleTextAppearance" format="reference" />
        <attr name="active" format="boolean" />
    </declare-styleable>

    <style name="SequenceLayout">
        <item name="progressForegroundColor">?colorAccent</item>
        <item name="progressBackgroundColor">@color/default_progress_background</item>
    </style>

    <style name="SequenceStep">
        <item name="anchorTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>


    <style name="SlyCalendarTimeDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/slycalendar_defHeaderColor</item>
        <item name="colorControlNormal">@color/slycalendar_defHeaderColor</item>
    </style>

    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/bus_ticket_status_color</item>
        <item name="colorPrimary">@color/bus_ticket_status_color</item>

        <!-- Set this to true if you want Full Screen without status bar -->
        <item name="android:windowFullscreen">false</item>

        <item name="android:windowIsFloating">false</item>

        <!-- This is important! Don't forget to set window background -->
        <item name="android:windowBackground">@color/white</item>

        <!-- Additionally if you want animations when dialog opening -->

        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/bus_button_color</item>
    </style>

    <style name="DialogThemeBus" parent="Theme.AppCompat.Light.Dialog">
