<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.AppBarOverlay.Search" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">#FFFFFF</item>
    </style>


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.FullScreen" parent="BanglaAppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="BanglaAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/apona_lohit</item>
    </style>

    <style name="EnglishAppTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/oxygen_light</item>
    </style>

    <!-- For Lollipop only -->

    <!-- Search Activity theme. -->

    <style name="HomeButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:background">@null</item>
    </style>

    <style name="heading_text">
        <item name="android:textColor">#ff000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="HomeButtonNew">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">@dimen/text_size_button</item>
        <item name="android:lineSpacingExtra">-3dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/foreground</item>
        <item name="android:background">@null</item>
    </style>


    <!--<style name="datepicker" parent="Theme.AppCompat.Light.Dialog">-->
    <!--<item name="colorPrimary">@color/mti_default_primary</item>-->
    <!--<item name="colorPrimaryDark">@color/mti_default_primary</item>-->
    <!--<item name="colorAccent">@color/mti_ring_lbl_date_color</item>-->
    <!--</style>-->

    <style name="TicketFrom">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TicketTo">
        <item name="android:textSize">18sp</item>
        <item name="android:gravity">end</item>
    </style>

    <style name="TicketFromPort">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="TicketToPort">
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">end</item>
    </style>


    <declare-styleable name="SequenceLayout">
        <attr name="progressForegroundColor" format="color"/>
        <attr name="progressBackgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SequenceStep">
        <attr name="anchor" format="string"/>
        <attr name="anchorTextAppearance" format="reference"/>
        <attr name="title" format="string"/>
        <attr name="titleTextAppearance" format="reference"/>
        <attr name="subtitle" format="string"/>
        <attr name="subtitleTextAppearance" format="reference"/>
        <attr name="active" format="boolean"/>
    </declare-styleable>

    <style name="SequenceLayout">
        <item name="progressForegroundColor">?colorAccent</item>
        <item name="progressBackgroundColor">@color/default_progress_background</item>
    </style>

    <style name="SequenceStep">
        <item name="anchorTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="titleTextAppearance">@style/TextAppearance.AppCompat.Small</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.AppCompat.Body1</item>
    </style>

</resources>
