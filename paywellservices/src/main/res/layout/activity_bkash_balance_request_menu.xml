<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.payments.bkash.BKashBalanceRequestMenuActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homeBtnBkashPWBalance"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:drawableTop="@drawable/ic_home_pw_balance"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_paywell_balance_req"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/homeBtnBkashBankTransfer"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:drawableTop="@drawable/ic_home_bank_transfer"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_bank_trns_req"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homeBtnBkashForCash"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:drawableTop="@drawable/ic_home_cash_request"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_cash_req"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.design.widget.CoordinatorLayout>
