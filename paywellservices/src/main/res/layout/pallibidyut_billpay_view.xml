<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="#FFFFFF"
        android:layout_margin="5dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="2.8"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_margin="2dp"
                    android:background="@drawable/borderline_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="1sp"
                        android:padding="5dp"
                        android:layout_margin="5dp"
                        android:text="@string/bill_number"
                        android:textColor="#333333" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:padding="5dp"
                        android:text="@string/bill_amount"
                        android:textColor="#333333" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="6.5"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/borderline_background"
                    android:layout_margin="2dp"
                    android:gravity="center_vertical">
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/pbBillNumberET"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:singleLine="true"
                            android:inputType="number"
                            android:maxLength="30"
                            android:textColor="#333333" />

                        <ImageView
                            android:id="@+id/billViewRemoveImage"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_gravity="top|end"
                            android:layout_marginTop="3dp"
                            android:layout_marginRight="3dp"
                            android:background="@drawable/palli_bill_close"
                            android:contentDescription="@null"
                            android:shadowColor="@color/blackShade" />

                    </FrameLayout>
                    <EditText
                        android:id="@+id/pbBillAmountET"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:singleLine="true"
                        android:inputType="number"
                        android:maxLength="7"
                        android:textColor="#333333" />

                </LinearLayout>
            </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>