<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/linearLayout32"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#eafff4">

    <TextView
            android:id="@+id/lblListItem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoLink="all"
            android:paddingTop="8dp"
            android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
            android:paddingStart="?android:attr/expandableListPreferredItemPaddingLeft"
            android:paddingBottom="8dp"
            android:layout_marginRight="8dp"
            android:text="লগইন করার জন্য লগইন অপশনটি ক্লিক করুন। তারপর পেওয়েলে এ ব্যবহৃত আপনার মোবাইল নম্বরটি এবং আপনার পিন নম্বরটি লিখে লগইন অপশনটি ক্লিক করুন। আপনার রেজিস্টার্ড মোবাইল নম্বরে “৪” ডিজিটের একটি OTP নাম্বার পাঠানো হবে। OTP নাম্বারটি সঠিক স্থানে বসিয়ে “Next” অপশনটি ক্লিক করুন। OTP যাচাইকরণ সম্পন্ন হলে “ঠিক আছে” অপশনে ক্লিক করুন।"
            android:textColor="#59595c"
            android:textSize="16sp" />

</LinearLayout>