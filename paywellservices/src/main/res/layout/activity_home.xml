<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_home"
        tools:context="com.cloudwell.paywell.services.activity.home.HomeActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout22"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
                android:id="@+id/ivGetHelpCallCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="@drawable/ic_get_help"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        <ImageView
                android:id="@+id/imageView37"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="164dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/paywell_logo_home" />

        <Button
                android:id="@+id/btLogin"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="48dp"
                android:layout_marginEnd="50dp"
                android:layout_marginRight="50dp"

                android:background="@drawable/login_shadow_button"
                android:drawableLeft="@drawable/login_img_icon"
                android:drawableRight="@drawable/login_img_next_icon"
                android:gravity="start|center"
                android:drawablePadding="20dp"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="20dp"
                android:paddingBottom="8dp"
                android:text="@string/txt_login"
                android:textAllCaps="false"
                android:textColor="#53ac9b"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView37"
                android:drawableStart="@drawable/login_img_icon"
                android:drawableEnd="@drawable/login_img_next_icon" />

        <Button
                android:id="@+id/btRegistration"
                android:layout_width="250dp"
                android:gravity="start|center"
                android:drawablePadding="20dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:background="@drawable/registration_rounded_button"
                android:drawableLeft="@drawable/sing_up_edit"
                android:paddingLeft="20dp"
                android:paddingTop="8dp"
                android:paddingRight="66dp"
                android:paddingBottom="8dp"
                android:text="@string/txt_signup"
                android:textAllCaps="false"
                android:textColor="#ffffff"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btLogin"
                android:drawableStart="@drawable/sing_up_edit"
                android:paddingStart="20dp"
                android:paddingEnd="66dp" />

        <TextView
                android:id="@+id/home_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="120dp"
                android:layout_marginEnd="24dp"
                android:layout_marginRight="24dp"
                android:padding="10dp"
                android:text=" Easier | Secure | Faster "
                android:textColor="#ffffff"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btRegistration" />

        <ImageView
                android:id="@+id/ivLanSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_bangla" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>
