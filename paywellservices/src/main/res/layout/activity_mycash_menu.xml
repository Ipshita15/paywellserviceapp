<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_background"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/fbCardView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        card_view:cardBackgroundColor="@color/card_background"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <TextView
            android:id="@+id/mycashBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:typeface="serif" />
    </android.support.v7.widget.CardView>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/coordinateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/homeBtnCashInOut"
                        style="@style/HomeButton"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_cash_in_out"
                        android:onClick="onButtonClicker"
                        android:text="@string/home_cash_in_out"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <!--<Button-->
                        <!--android:id="@+id/homeBtnUtilityBillPay"-->
                        <!--style="@style/HomeButton"-->
                        <!--android:layout_weight="1"-->
                        <!--android:drawableTop="@drawable/ic_mycash_bill_pay"-->
                        <!--android:onClick="onButtonClicker"-->
                        <!--android:paddingLeft="8dp"-->
                        <!--android:text="@string/home_utility_pb_billpay"-->
                        <!--android:textAllCaps="false"-->
                        <!--android:textAppearance="?android:attr/textAppearanceMedium" />-->

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></LinearLayout>

                    <Button
                        android:id="@+id/homeBtnFundManagement"
                        style="@style/HomeButton"
                        android:layout_marginBottom="5dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginTop="15dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_fund_management"
                        android:onClick="onButtonClicker"
                        android:paddingLeft="8dp"
                        android:text="@string/home_fund_management"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/homeBtnBalance"
                        style="@style/HomeButton"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_balance"
                        android:onClick="onButtonClicker"
                        android:text="@string/home_mycash_balance"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></LinearLayout>

                    <Button
                        android:id="@+id/homeBtnCustomerRegistration"
                        style="@style/HomeButton"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_customer_registration"
                        android:onClick="onButtonClicker"
                        android:text="@string/home_customer_registration"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <Button
                        android:id="@+id/homeBtnGenerateOTP"
                        style="@style/HomeButton"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_generate_otp"
                        android:onClick="onButtonClicker"
                        android:text="@string/home_generate_otp"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></LinearLayout>

                    <Button
                        android:id="@+id/homeBtnPinChange"
                        style="@style/HomeButton"
                        android:layout_marginBottom="5dp"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_home_change_pin"
                        android:onClick="onButtonClicker"
                        android:text="@string/home_settings_change_pin"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></LinearLayout>

                    <Button
                        android:id="@+id/homeBtnInquiry"
                        style="@style/HomeButton"
                        android:layout_weight="1"
                        android:drawableTop="@drawable/ic_mycash_enquiry"
                        android:onClick="onButtonClicker"
                        android:paddingLeft="3dp"
                        android:text="@string/home_inquiry"
                        android:textAllCaps="false"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:gravity="center"></LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </android.support.design.widget.CoordinatorLayout>
</LinearLayout>
