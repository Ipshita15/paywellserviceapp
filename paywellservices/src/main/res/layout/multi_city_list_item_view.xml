<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/flightNumberTV"
            android:layout_width="0dp"
            android:layout_weight=".6"
            android:layout_height="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:text="1"
            android:textSize="10dp"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/flightCancelIV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:clickable="true"
            android:src="@drawable/close_green" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/tvFrom"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1.3"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="From"
                android:textColor="#999999" />

            <TextSwitcher
                android:id="@+id/tsOneWayTripFrom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DHAKA"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextSwitcher
                android:id="@+id/tsOneWayTripFromPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shahjalal International"
                android:textSize="10sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/ivOneWayTripTextSwitcher"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.4"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_one_way" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:layout_weight="1.3"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="1"
                android:text="To"
                android:textColor="#999999" />

            <TextSwitcher
                android:id="@+id/tsOneWayTripTo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Dhaka"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextSwitcher
                android:id="@+id/tsOneWayTripToPort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="1"
                android:text="Cox's Bazar airport"
                android:textSize="10sp" />

        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:background="#c0c0c0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/departViewLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDepart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Depart"
                android:textColor="#999999" />

            <TextView
                android:id="@+id/tvDepartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/passengerClassLL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="Class" />

            <TextView
                android:id="@+id/airTicketClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Economy/Primium Economy"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="#999999" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0" />
</LinearLayout>