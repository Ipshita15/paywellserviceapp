<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:fancy="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".activity.eticket.busticketNew.BusPassengerBoothDepartureActivity">

    <include layout="@layout/tab_background_bus"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="8dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/dateLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <android.support.constraint.ConstraintLayout
                        android:id="@+id/linearLayout16"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        card_view:layout_constraintBottom_toTopOf="@+id/busSeatsTV"
                        card_view:layout_constraintTop_toTopOf="@+id/busSeatsTV">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="28dp"
                            android:layout_marginLeft="28dp"
                            android:layout_marginEnd="52dp"
                            android:layout_marginRight="52dp"
                            android:padding="10dp"
                            android:text="Your seats"
                            android:textSize="19sp"
                            card_view:layout_constraintBaseline_toBaselineOf="@+id/busSeatsTV"
                            card_view:layout_constraintEnd_toStartOf="@+id/imageView21"
                            card_view:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                            android:id="@+id/busSeatsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="138dp"
                            android:layout_marginLeft="138dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:text="A1,A2"
                            android:textColor="@color/bus_button_color"
                            android:textSize="20sp"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toStartOf="@+id/imageView21"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintTop_toTopOf="@+id/imageView21"/>

                        <ImageView
                            android:id="@+id/imageView21"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/prices_changed_icon"
                            card_view:layout_constraintBottom_toBottomOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"
                            card_view:layout_constraintStart_toEndOf="@+id/busSeatsTV"
                            card_view:layout_constraintTop_toTopOf="parent"/>
                    </android.support.constraint.ConstraintLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <EditText
                            android:id="@+id/fullNameTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/human_avatar"
                            android:drawablePadding="10dp"
                            android:hint="Full Name"
                            android:padding="10dp"
                            android:textSize="19sp"
                            android:theme="@style/BusAppTheme"/>

                        <EditText
                            android:id="@+id/mobileNumberTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/mobile_bus"
                            android:drawablePadding="12dp"
                            android:hint="Mobile Number"
                            android:padding="10dp"
                            android:textSize="19sp"
                            android:theme="@style/BusAppTheme"/>

                        <EditText
                            android:id="@+id/ageTV"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/age_bus"
                            android:drawablePadding="10dp"
                            android:hint="Age"
                            android:padding="10dp"
                            android:textSize="19sp"
                            android:theme="@style/BusAppTheme"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:text="Gender"
                                android:textColor="@color/bus_button_color"
                                android:textSize="19dp"/>

                            <RadioGroup
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/maleRB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Male"
                                    android:theme="@style/BusAppTheme"/>

                                <RadioButton
                                    android:id="@+id/femaleRB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Female"
                                    android:theme="@style/BusAppTheme"/>

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="8dp"
                card_view:cardUseCompatPadding="true">

                <android.support.constraint.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="282dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        android:text="@string/please_select_a_transport"
                        android:textColor="@color/color_tab_background_bus"
                        android:textSize="20sp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"/>

                    <Spinner
                        android:id="@+id/boothList"
                        android:layout_width="280dp"
                        android:layout_height="30dp"

                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:dropDownSelector="@drawable/bus_down_drop_icon"
                        android:padding="5dp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/textView21"/>

                    <View

                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/bus_button_color"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/boothList"/>

                </android.support.constraint.ConstraintLayout>

            </android.support.v7.widget.CardView>


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                fancy:fb_defaultColor="@color/bus_button_color"
                fancy:fb_fontIconResource="&#xf274;"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="@string/continue_booking"
                fancy:fb_textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
