<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:card_view="http://schemas.android.com/apk/res-auto"
             xmlns:fancy="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:id="@+id/rootLayout"
             android:layout_height="match_parent"
             tools:context=".activity.eticket.busticketNew.BusPassengerBoothDepartureActivity">

    <include layout="@layout/tab_background_bus"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin_half"
                android:layout_marginTop="@dimen/activity_horizontal_margin_half"
                android:layout_marginRight="@dimen/activity_horizontal_margin_half"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="8dp"
                card_view:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/dateLL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingRight="15dp"
                    >


                    <LinearLayout
                        android:id="@+id/linearLayout16"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintBottom_toTopOf="@+id/busSeatsTV"
                        card_view:layout_constraintTop_toTopOf="@+id/busSeatsTV">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/your_seats"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/busSeatsTV"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:text="A1,A2"
                            android:textColor="@color/bus_button_color"
                            android:textSize="18sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        card_view:layout_constraintBottom_toTopOf="@+id/busSeatsTV"
                        card_view:layout_constraintTop_toTopOf="@+id/busSeatsTV">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_price"
                            android:textSize="14sp"
                            />

                        <TextView
                            android:id="@+id/tvTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginBottom="10dp"
                            android:text="500"
                            android:textColor="@color/bus_button_color"
                            android:textSize="18sp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:orientation="vertical"
                        android:padding="08dp">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutFirstName"
                            android:layout_width="match_parent"
                            android:theme="@style/BusEditInputLayout"
                            android:layout_height="wrap_content">

                            <com.cloudwell.paywell.services.customView.clearableEditText.ClearableEditText
                                android:id="@+id/fullNameTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/human_avatar"
                                android:drawableLeft="@drawable/human_avatar"
                                android:drawablePadding="10dp"
                                android:hint="@string/full_name"
                                android:lines="1"
                                android:padding="10dp"
                                android:textSize="19sp"
                                android:theme="@style/BusAppTheme"/>
                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutAge"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/BusEditInputLayout">

                            <com.cloudwell.paywell.services.customView.clearableEditText.ClearableEditText
                                android:id="@+id/ageTV"
                                android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz1234567890"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/age_bus"
                                android:drawableLeft="@drawable/age_bus"
                                android:drawablePadding="10dp"
                                android:hint="@string/age"
                                android:inputType="number"
                                android:maxLength="3"
                                android:lines="1"
                                android:padding="10dp"
                                android:textSize="19sp"
                                android:theme="@style/BusAppTheme"/>
                        </com.google.android.material.textfield.TextInputLayout>


                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutmobileNumber"
                            android:layout_width="match_parent"
                            android:theme="@style/BusEditInputLayout"
                            android:layout_height="wrap_content">

                            <com.cloudwell.paywell.services.customView.clearableEditText.ClearableEditText
                                android:id="@+id/mobileNumberTV"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/mobile_bus"
                                android:drawableLeft="@drawable/mobile_bus"
                                android:drawablePadding="12dp"
                                android:hint="@string/mobile_number"
                                android:lines="1"
                                android:digits="1234567890"
                                android:maxLength="11"
                                android:inputType="phone"
                                android:padding="10dp"
                                android:textSize="19sp"
                                android:theme="@style/BusAppTheme"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/BusEditInputLayout">

                            <com.cloudwell.paywell.services.customView.clearableEditText.ClearableEditText
                                android:id="@+id/etAddress"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/mobile_bus"
                                android:drawableLeft="@drawable/mobile_bus"
                                android:drawablePadding="12dp"
                                android:hint="@string/bus_address"
                                android:inputType="textPostalAddress"
                                android:lines="1"
                                android:padding="10dp"
                                android:textSize="19sp"
                                android:theme="@style/BusAppTheme"/>

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/textInputLayoutmobilEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:theme="@style/BusEditInputLayout">

                            <com.cloudwell.paywell.services.customView.clearableEditText.ClearableEditText
                                android:id="@+id/etEmail"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:drawableStart="@drawable/mobile_bus"
                                android:drawableLeft="@drawable/mobile_bus"
                                android:drawablePadding="12dp"
                                android:hint="@string/et_email"
                                android:inputType="textEmailAddress"
                                android:lines="1"
                                android:padding="10dp"
                                android:textSize="19sp"
                                android:theme="@style/BusAppTheme"/>

                        </com.google.android.material.textfield.TextInputLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center|right"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="10dp"
                                android:gravity="center"
                                android:padding="5dp"
                                android:layout_marginEnd="10dp"
                                android:textColor="@color/bus_button_color"
                                android:text="@string/bus_info_gender"
                                android:textSize="19sp"/>

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <RadioButton
                                    android:id="@+id/maleRB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:checked="true"
                                    android:text="@string/male"
                                    android:theme="@style/BusAppTheme"/>

                                <RadioButton
                                    android:id="@+id/femaleRB"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/female"
                                    android:theme="@style/BusAppTheme"/>

                            </RadioGroup>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/cardLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                card_view:cardBackgroundColor="@color/card_background"
                card_view:cardCornerRadius="8dp"
                card_view:cardUseCompatPadding="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:id="@+id/textView21"
                        android:layout_width="282dp"
                        android:layout_height="44dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:padding="10dp"
                        android:text="@string/boarding_point"

                        android:textColor="@color/bus_button_color"
                        android:textSize="20sp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toTopOf="parent"/>

                    <Spinner
                        android:id="@+id/boothList"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:dropDownSelector="@drawable/bus_down_drop_icon"
                        android:padding="5dp"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/textView21"/>

                    <View

                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@color/bus_button_color"
                        card_view:layout_constraintEnd_toEndOf="parent"
                        card_view:layout_constraintStart_toStartOf="parent"
                        card_view:layout_constraintTop_toBottomOf="@+id/boothList"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <mehdi.sakout.fancybuttons.FancyButton
                android:id="@+id/btn_search"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:paddingLeft="50dp"
                android:paddingRight="50dp"
                android:textAppearance="?android:attr/textAppearanceMedium"
                fancy:fb_defaultColor="@color/bus_button_color"
                fancy:fb_fontIconResource="&#xf274;"
                fancy:fb_iconPosition="left"
                fancy:fb_radius="5dp"
                fancy:fb_text="@string/continue_booking"
                fancy:fb_textColor="#FFFFFF"/>
        </LinearLayout>
    </ScrollView>


</FrameLayout>
