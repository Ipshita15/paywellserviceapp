<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.utility.qubee.QubeeMainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homeBtnRecharge"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_home_qubee_recharge"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_utility_qubee_recharge"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnInquiry"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="15dp"
                    android:drawableTop="@drawable/ic_home_pb_inquiry_billpay"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_utility_qubee_inq"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/homeBtnWrongAccount"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_home_qubee_complain_account"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_utility_qubee_wrong_acc"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnWrongAmount"
                    style="@style/HomeButton"
                    android:drawableTop="@drawable/ic_home_qubee_complain_amount"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_utility_qubee_wrong_amount"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnPayment"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_home_qubee_complain_trx"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_utility_qubee_payment"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
