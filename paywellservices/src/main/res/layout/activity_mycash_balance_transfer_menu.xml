<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinateLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.mfs.mycash.ManageMenuActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            tools:ignore="ScrollViewSize">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/homeBtnFromPayWell"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_mycash_paywell_to_mycash"
                    android:onClick="onButtonClicker"
                    android:paddingTop="5dp"
                    android:text="@string/home_paywell_to_mycash"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnFromMYCash"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_mycash_mycash_to_paywell"
                    android:onClick="onButtonClicker"
                    android:paddingTop="5dp"
                    android:text="@string/home_mycash_to_paywell"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3">

                <Button
                    android:id="@+id/homeBtnMYCashBankTransfer"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_mycash_bank_transfer"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_bank_trns_req"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnMYCashCashTransfer"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_mycash_cash_request"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_cash_req"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

                <Button
                    android:id="@+id/homeBtnConfirmation"
                    style="@style/HomeButton"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/ic_payment_confirmation"
                    android:onClick="onButtonClicker"
                    android:text="@string/home_bkash_payment_confirm"
                    android:textAllCaps="false"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="center"></LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.design.widget.CoordinatorLayout>
